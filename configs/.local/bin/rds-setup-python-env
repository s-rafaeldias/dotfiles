#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

python_version=${1:-"3.14"}
echo "Using python version $python_version"

echo "Creating a new virtual env using uv..."
uv venv -p "$python_version"

echo "Creating .envrc file"
envrc_path=$(pwd)/.envrc
cat << EOF >> "$envrc_path"
# vim: ft=sh
source ./.venv/bin/activate
EOF

echo "Allowing direnv"
direnv allow .

uv init

echo "Installing basic dev tools..."
uv add --group dev \
    "python-lsp-server[all]" \
    python-lsp-ruff \
    python-lsp-black \
    pylsp-mypy \
    pylsp-rope \
    ruff-lsp \
    pyls-isort \
    debugpy
