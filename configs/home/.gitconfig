[user]
    name = Rafael Dias
    email = s.rafaeldias@protonmail.com
    signingkey = s.rafaeldias@protonmail.com

[core]
    editor = nvim
    excludesfile = ~/.gitignore

[commit]
    gpgsign = true
    template = ~/.gitmessage

[init]
    defaultbranch = main

[branch]
    autoSetupMerge = always

[rebase]
    autosquash = true
    autoStash = true

[push]
    default = current

[pull]
    default = current

[rerere]
    enabled = true

[gpg]
    program = gpg

[alias]
    recent = branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)'
    pl = pull
    ps = push
    s = status
    new = log main..HEAD
    missing = log HEAD..main

[fetch]
    prune = true
