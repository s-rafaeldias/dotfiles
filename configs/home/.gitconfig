[user]
    name = Rafael Dias
    email = s.rafaeldias@protonmail.com
    signingkey = s.rafaeldias@protonmail.com

[core]
    editor = nvim

[commit]
    gpgsign = true
    template = ~/.gitmessage

[init]
    defaultbranch = main

[branch]
    autoSetupMerge = always

[push]
    default = current
[pull]
    default = matching

[gpg]
    program = gpg

[alias]
    recent = branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)'
    p = pull
    P = push
    s = status

[fetch]
    prune = true
