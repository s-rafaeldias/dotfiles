#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

# python_env="3.11"
python_version=${1:-"3.11"}
echo "Using python version $python_version"

# python_cmd="python$python_version"
#
# # Check if python version is installed
# if ! type "$python_cmd" &> /dev/null; then
#     echo "Please install version of Python"
#     exit 1
# fi

echo "Creating a new virtual env..."
virtualenv .venv -p "$python_version"

echo "Creating .envrc file"
envrc_path=$(pwd)/.envrc
cat << EOF >> "$envrc_path"
# vim: ft=sh
source ./.venv/bin/activate
EOF

echo "Allowing direnv"
direnv allow .

echo "Updating pip"
./.venv/bin/pip install -U pip

echo "Installing basic dev tools..."
./.venv/bin/pip install \
    python-lsp-ruff \
    pylsp-mypy \
    pylsp-rope \
    pyls-isort \
    python-lsp-black \
    "python-lsp-server[all]"
